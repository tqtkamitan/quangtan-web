    </script>
    <script>
        @{
            var topScroll = 0;
            if(TempData["ScrollTop"] != null)
            {
                topScroll = int.Parse(TempData["ScrollTop"].ToString());
            }
        }
        $(document).ready(function () {
            $("#RedirecUrl").val($(location).attr('href'));
            if ('@Session["TaiKhoanThanhVien"]' != null && '@Session["TaiKhoanThanhVien"]' != '') {
                $(".user-login").hide();

                $(".avatar-login").parent().show();
                $("#box-login").parent().hide();

            } else {
                //$(".login-google").trigger('click');
            }

            $(window).scroll(function (event) {
                $("#ScrollTopLogin").val(document.documentElement.scrollTop);
            });

            document.body.scrollTop = document.documentElement.scrollTop = @topScroll;

            localStorage.setItem("vuong", "123")
        })

        $("#box-login").click(function () {
            $("#RedirecUrl").val($(location).attr('href'));
            $("#RedirecUrlRegister").val($(location).attr('href'));
            $("#ReturnUrl").val($(location).attr('href'));
            $(".user-login").toggle();
                });

        $("#info-user-log").click(function () {
            $(".menu-profile").toggle();
                });

        $(".close-login").click(function () {
            $(".user-login").hide();
                });

        $('#log-out').click(function () {
                    location.replace('@Url.Action("Logout", "Login")' + '?redirecUrl=' + $("#RedirecUrl").val());
                });
    </script>
</body>
